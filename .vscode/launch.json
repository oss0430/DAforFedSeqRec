{
    "version": "0.2.0",
    "configurations": [
        {
            "name" : "Python Data Augmentation Debugging",
            "type" : "debugpy",
            "request" : "launch",
            "program" : "augmentation/seq_rec_augmentation.py",
            "console" : "integratedTerminal",
            "args" : [
                "-o", "amazon_beauty", // original dataset name
                "-r", "", //"../../../../data1/donghoon/FederatedScopeData/Amazon_Beauty_5core_mapped/debug", // result dataset name (if not given, it will be original dataset name + augmentation type)
                "-t", "random_replacing", // augmenation type
                "-d", "left", // direction, only used at cutting augmentation
                "-p", "0.1", // replace probabiliy, only used at replace augmentation
                "-pls", "5", // push length range start, only used at pushing augmentation
                "-ple", "10" // push length range end, only used at pushing augmentation
            ]
        },
        {
            "name" : "Python FederatedScope Main",
            "type" : "debugpy",
            "request" : "launch",
            "program" : "main.py",
            "console" : "integratedTerminal",
            "args" : [
                "--cfg", "run_configs/augmentation_test/Amazon_Beauty/Random_Replace/random_replace_1e-1_augs_10_1_epochs.yaml"
            ]
        },
        {
            "name": "Python: 현재 파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args" : [
                "--cfg", "run_configs/augmentation_test/ML-1M_cut_sequence/shadow-ml-1m_sasrec_augmentation_right_10_ce_lr_1e-4_debugging.yaml"
            ]
        }
    ]
}

